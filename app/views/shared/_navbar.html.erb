<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <img src="https://images.vexels.com/media/users/3/135692/isolated/preview/63080cc33fe5de7792656f28e91efc69-cocktail-drink-silhouette-by-vexels.png" alt="logo">
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs">
    <% if @cocktails %>
      <%= link_to 'Random cocktail', @cocktail, class:"navbar-wagon-item navbar-wagon-link" %>
    <% end %>
    <%= link_to 'Add a new cocktail', new_cocktail_path, class:"navbar-wagon-item navbar-wagon-link" %>
  </div>

  <% if @cocktails %>
    <div class="navbar-wagon-item hidden-sm hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fas fa-bars dropdown-toggle" data-toggle="dropdown" role="button"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
              <%= link_to 'Random cocktail', @cocktail, class:"navbar-wagon-item navbar-wagon-link" %>
          </li>
          <li><%= link_to 'Add a new cocktail', new_cocktail_path, class:"navbar-wagon-item navbar-wagon-link" %></li>
        </ul>
      </div>
    </div>
  <% else %>
    <div class="navbar-wagon-right">
      <%= link_to 'Add a new cocktail', new_cocktail_path, class:"navbar-wagon-item navbar-wagon-link" %>
    </div>

  <% end %>

</div>
